			<value>com/project/bean/News.hbm.xml</value>
			<value>com/project/bean/User.hbm.xml</value>
			<value>com/project/bean/Shortdec.hbm.xml</value>
			<value>com/project/bean/Competition.hbm.xml</value>
			<value>com/project/bean/Team.hbm.xml</value>
	   </list>
	</property>
    </bean>
    
